<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/spam_detect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spam_detection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spam_detect_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/spam_detect_checkbox"/>

    <CheckBox
        android:id="@+id/spam_detect_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/auto_sync_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_sync"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/auto_sync_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/auto_sync_checkbox"/>


    <CheckBox
        android:id="@+id/auto_sync_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spam_detect_checkbox"/>

    <TextView
        android:id="@+id/auto_cache_clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_cache_clear"
        app:layout_constraintBottom_toBottomOf="@id/auto_cache_checkbox"
        app:layout_constraintEnd_toStartOf="@id/auto_cache_checkbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/auto_cache_checkbox" />


    <CheckBox
        android:id="@+id/auto_cache_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_sync_checkbox"/>


</androidx.constraintlayout.widget.ConstraintLayout>